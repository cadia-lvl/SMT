FROM haukurp/moses-smt:1.0.0
MAINTAINER haukurpalljonsson@gmail.com

ARG MINICONDA_VERSION="4.7.12"

# Install miniconda (adjusted from https://hub.docker.com/r/continuumio/miniconda3/dockerfile)
ENV PATH /opt/conda/bin:$PATH

RUN apt-get update --fix-missing && \
    apt-get install -y wget bzip2 ca-certificates curl git && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

RUN wget --quiet https://repo.anaconda.com/miniconda/Miniconda3-${MINICONDA_VERSION}-Linux-x86_64.sh -O ~/miniconda.sh && \
    /bin/bash ~/miniconda.sh -b -p /opt/conda && \
    rm ~/miniconda.sh && \
    /opt/conda/bin/conda clean -tipsy && \
    ln -s /opt/conda/etc/profile.d/conda.sh /etc/profile.d/conda.sh && \
    echo ". /opt/conda/etc/profile.d/conda.sh" >> ~/.bashrc && \
    echo "conda activate base" >> ~/.bashrc

# Add the environment
COPY environment.yml /opt/

RUN conda env create -f /opt/environment.yml && \
    echo "conda activate jupyter" >> ~/.bashrc && \
    mkdir /project && \
    mkdir /work

# To be sure that the package is installed into the Jupyter environment.
RUN /bin/bash -c "pip install -e git+https://github.com/cadia-lvl/SMT.git@v1.0.2#egg=corpus\&subdirectory=corpus" && \
    python -c "import nltk;nltk.download('punkt')"

ENV TINI_VERSION v0.16.1
ADD https://github.com/krallin/tini/releases/download/${TINI_VERSION}/tini /usr/bin/tini
RUN chmod +x /usr/bin/tini

ENTRYPOINT [ "/usr/bin/tini", "--" ]
CMD [ "/bin/bash" ]
